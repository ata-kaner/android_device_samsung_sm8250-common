    chown system radio /sys/class/sensors/hidden_hole/hh_sub_ver
    chown system radio /sys/class/sensors/hidden_hole/hh_sub_write_all_data
    chown system radio /sys/class/sensors/hidden_hole/hh_sub_is_exist_efs
